<% layout("layouts/boilerplate") %>
<div class="row justify-content-center mb-3">
  <div class="col-sm-11 col-md-8 col-lg-6">
    <h2 class="mb-3">Create Campground</h2>
    <div class="card shadow">
      <div class="card-body">
        <form
          novalidate
          method="post"
          action="/campgrounds"
          class="needs-validation"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="form-label" for="title">Campground Title</label>
            <input
              autofocus
              id="title"
              type="text"
              class="form-control"
              name="campground[title]"
              placeholder="Enter Campground Title"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="location">Campground Location</label>
            <input
              type="text"
              id="location"
              class="form-control"
              name="campground[location]"
              placeholder="Enter Campground Location"
              required
            />
          </div>
          <div class="mb-3">
            <input
              type="file"
              id="images"
              name="images"
              class="form-control"
              multiple
              placeholder="Select Images"
            />
          </div>
          <label for="price" class="form-label">Campground Price</label>
          <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <input
              id="price"
              type="text"
              class="form-control"
              name="campground[price]"
              placeholder="Enter Campground Price"
              required
            />
            <span class="input-group-text">.00</span>
          </div>
          <div class="form-floating mb-3">
            <textarea
              id="description"
              class="form-control"
              style="height: 100px"
              name="campground[description]"
              placeholder="Enter Campground Description"
              required
            ></textarea>
            <label for="description">Campground Description</label>
          </div>
          <div>
            <button type="submit" class="btn btn-success">
              Add Campground
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
