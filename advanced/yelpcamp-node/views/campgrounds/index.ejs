<% layout("layouts/boilerplate") %>
<div>
  <h2>Campgrounds</h2>
  <% for (let campground of campgrounds) { %>
  <div class="card my-3">
    <div class="row justify-content-center">
      <div class="col-md-4">
        <img
          src="<%= campground.images[Math.floor(Math.random() * campground.images.length)].url %>"
          class="img-fluid"
          alt="<%= campground.title %>"
        />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= campground.title %></h5>
          <p class="card-text"><%= campground.description %></p>
          <p class="card-text">
            <small class="text-secondary"><%= campground.location %></small>
          </p>
          <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">
            View <%= campground.title %>
          </a>
        </div>
      </div>
    </div>
  </div>
  <% } %>
  <nav>
    <ul class="pagination">
      <li class="page-item disabled">
        <a class="page-link">Previous</a>
      </li>
      <li class="page-item <%= nextPage === null ? 'disabled' : '' %>">
        <a class="page-link" href="?page=<%= nextPage %>">Next</a>
      </li>
    </ul>
  </nav>
</div>
