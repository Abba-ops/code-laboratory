<% layout("layouts/boilerplate") %>
<div class="row justify-content-center mt-3">
  <div class="col-sm-9 col-md-7 col-lg-5">
    <h3 class="mb-3">Create a new blog</h3>
    <form
      method="post"
      action="/blogs"
      class="p-4 needs-validation bg-white rounded border"
      novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Blog title</label>
        <input
          id="title"
          type="text"
          name="title"
          class="form-control"
          placeholder="Enter blog title"
          required />
      </div>
      <div class="form-floating mb-3">
        <textarea
          id="body"
          name="body"
          class="form-control"
          style="height: 100px"
          placeholder="Enter blog content"
          required></textarea>
        <label for="body">Blog content</label>
      </div>
      <button type="submit" class="btn btn-secondary">Create Blog</button>
    </form>
  </div>
</div>
