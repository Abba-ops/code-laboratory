<% layout("layouts/boilerplate") %>
<div class="row justify-content-center mt-3">
  <div class="col-sm-9 col-md-7 col-lg-5">
    <h3 class="mb-3">Edit a blog</h3>
    <form
      method="post"
      class="p-4 bg-white needs-validation rounded border"
      action="/blogs/<%= blog._id %>?_method=PUT"
      novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Blog title</label>
        <input
          id="title"
          type="text"
          name="title"
          class="form-control"
          placeholder="Enter blog title"
          value="<%= blog.title %>" />
      </div>
      <div class="form-floating mb-3">
        <textarea
          id="body"
          name="body"
          class="form-control"
          style="height: 100px"
          placeholder="Enter blog content"
          required>
<%= blog.body %>
</textarea
        >
        <label for="body">Blog content</label>
      </div>
      <button class="btn btn-secondary">Save Blog</button>
    </form>
  </div>
</div>
